{
  "compilerOptions": {
    "target": "es6",
    "lib": ["es2016", "esnext.asynciterable", "esnext"],
    "jsx": "react-native",
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "types": ["jest"],
    "esModuleInterop": true,
    "outDir": "build/",
    "moduleResolution": "classic"
  },
  "include": ["src/**/*", "./types.d.ts"],
  "exclude": ["node_modules", "**/*.test.tsx"]
}
